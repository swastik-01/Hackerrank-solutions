int utopianTree(int n) {
    int height=1;
    if (n==0) {
        return height;
    }
    else{
        for(int i=1;i<=n;i++){
            if(i%2==0){
                height+=1;;
            }
            else if(i%2!=0){
                height=height*2;
            }
        }
    }
    return height;
}
