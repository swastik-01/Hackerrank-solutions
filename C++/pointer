#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

void pointer(int *a, int *b){
    cout<<*a+*b<<endl;
    int x=*a-*b;
    cout<<abs(x);    
}

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int a,b;
    cin>>a>>b;
    
    pointer(&a,&b);
    return 0;
}
